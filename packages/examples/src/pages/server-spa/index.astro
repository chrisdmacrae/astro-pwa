---
import Card from "../../components/astro/Cards/Card.astro";
import ArrowRight from "../../components/astro/ArrowRight.astro";
import ServerSPALayout from "../../layouts/ServerSPALayout.astro";

const demos = [
  { 
    title: "Astro demo",
    description: "A simple demo of a dynamic Astro counter using Vanilla js and stores",
    href: "/server-spa/astro"
  },
  {
    title: "React demo",
    description: "A simple demo of a dynamic counter using React.js and stores",
    href: "/server-spa/react"   
  },
  {
    title: "Vue demo",
    description: "A simple demo of a dynamic counter using Vue.js and stores",
    href: "/server-spa/vue"   
  },
  {
    title: "Store demo",
    description: "A simple demo of stores allowing for server-side and client-side temporary sessions",
    href: "/server-spa/store"   
  },
  {
    title: "Routing demo",
    description: "A simple demo of SPA-routing using the Astro PWA file-system router",
    href: "/server-spa/router"   
  },
  {
    title: "Form demo",
    description: "A simple demo of a form that is submitted on the server",
    href: "/server-spa/form"   
  },
  {
    title: "Form demo (React)",
    description: "A simple demo of a form that is sent to the server using React, and then submitted on the server",
    href: "/server-spa/form"   
  },
  {
    title: "Frame demo",
    description: "A simple demo of Astro frames allowing a sub-page to be loaded into a page as a refreshable server-rendered island of content",
    href: "/server-spa/frames"   
  },
  {
    title: "Multiple frameworks",
    description: "A simple demo of all counters built using supported frameworks sharing state using stores",
    href: "/server-spa/multi-framework"   
  },
]
---
<ServerSPALayout title="Astro SPA Examples" filePath={Astro.self.moduleId!.replace(process.cwd(), `https://github.com/chrisdmacrae/astro-pwa/tree/main/packages`)}>
  <main class="flex flex-col gap-4">
  <p class="text-md text-slate-500">
    Welcome to the Astro SPA Examples. These live demos illustrate how to use this integration to use Astro to build
    single page applications and collaborative microfrontends with Astro.
  </p>
  </main>
  <section class="flex flex-col gap-2">
    <h4 class="text-md font-bold">All demos</h4>
    <ul class="flex flex-col gap-4">
      {demos.map(demo => (
        <Card as="li" href={demo.href}>
					<h2 class="font-bold text-xl text-gray-700 flex gap-2 items-center">
						{demo.title}
						<ArrowRight />
					</h2>
					<p class="text-gray-600">
						{demo.description}
					</p>
				</Card>
      ))}
    </ul>
  </section>
</ServerSPALayout>
