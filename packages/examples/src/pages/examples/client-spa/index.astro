---
import Card from "../../components/astro/Cards/Card.astro";
import ArrowRight from "../../components/astro/ArrowRight.astro";
import ClientSPALayout from "../../../layouts/ClientSPALayout.astro";

const demos = [
  { 
    title: "Astro demo",
    description: "A simple demo of a dynamic Astro counter using Vanilla js and stores",
    href: "/examples/client-spa/astro"
  },
  {
    title: "React demo",
    description: "A simple demo of a dynamic counter using React.js and stores",
    href: "/examples/client-spa/react"   
  },
  {
    title: "Vue demo",
    description: "A simple demo of a dynamic counter using Vue.js and stores",
    href: "/examples/client-spa/vue"   
  },
  {
    title: "Store demo",
    description: "A simple demo of stores allowing for server-side and client-side temporary sessions",
    href: "/examples/client-spa/store"   
  },
  {
    title: "Routing demo",
    description: "A simple demo of SPA-routing using the Astro PWA file-system router",
    href: "/examples/client-spa/router"   
  },
  {
    title: "Form demo",
    description: "A simple demo of a form that is submitted on the server",
    href: "/examples/client-spa/form"   
  },
  {
    title: "Multiple frameworks",
    description: "A simple demo of all counters built using supported frameworks sharing state using stores",
    href: "/examples/client-spa/multi-framework"   
  },
]
---
<ClientSPALayout title="Astro SPA Examples" filePath={Astro.self.moduleId!.replace(process.cwd(), `https://github.com/chrisdmacrae/astro-pwa/tree/main/packages/examples`)}>
  <main class="flex flex-col gap-4">
  <p class="text-md text-slate-500">
    Welcome to the client SPA (single page application) examples. A client-only SPA is pre-rendered at build time and supported by API routes.
  </p>
  <p class="text-md text-slate-500">
    Almost all of the functionality of Astro PWA is supported by client-only SPAs, such as routing, forms, stores, and more.
  </p>
  </main>
  <section class="flex flex-col gap-2">
    <h4 class="text-md font-bold">All demos</h4>
    <ul class="flex flex-col gap-4">
      {demos.map(demo => (
        <Card as="li" href={demo.href}>
					<h2 class="font-bold text-xl text-gray-700 flex gap-2 items-center">
						{demo.title}
						<ArrowRight />
					</h2>
					<p class="text-gray-600">
						{demo.description}
					</p>
				</Card>
      ))}
    </ul>
  </section>
</ClientSPALayout>
