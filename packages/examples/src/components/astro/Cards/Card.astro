---
import Featured from './Featured.astro';
import Shadow from './Shadow.astro';

export interface Props {
  as?: string
  href?: string
  variant?: "featured" | "shadow"
}

const { variant = "shadow", as, href } = Astro.props
---
{variant === 'shadow' && (
  <Shadow as={as} href={href}>
    <slot />
  </Shadow>
)}
{variant === "featured" && (
  <Featured as={as} href={href}>
    <slot />
  </Featured>
)}
