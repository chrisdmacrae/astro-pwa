---
import { createPageRoutesFromGlob } from "astro-pwa"
import SPA from "astro-pwa/SPA.astro"
import { stores } from "../stores"
import { execSync } from 'child_process'
import Layout from "./Layout.astro"

export type Props = {
  title: string
}

const { title } = Astro.props
const isHome = Astro.url.pathname === '/client-spa'
const routes = await createPageRoutesFromGlob(Astro.glob('../pages/client-spa/**/*.astro'))
const branch = execSync('git branch --show-current').toString()
---
<Layout title={title}>
  <SPA routes={routes} stores={stores} class="w-full min-h-screen gap-4 flex flex-col items-center h-full">
    <section class="text-center">
      <h1 class="font-bold text-xl text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-pink-400">Astro PWA</h1>
      <h2 class="font-bold text-md text-slate-600">Client SPA examples and code samples</h2>
    </section>
    <div class="flex flex-col gap-2 w-full max-w-prose bg-slate-50 border border-slate-200 p-4 rounded-xl shadow-md">
      <section class="flex flex-col gap-2">
        <nav class="flex flex-row gap-2 text-slate-500 hover:text-slate-400">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
          </svg>
          <a href={isHome ? "/" : "/client-spa"}>Back to list</a>
        </nav>
        <h3 class="font-bold text-lg">{title}</h3>
      </section>
      <slot />
      <footer class="flex justify-center text-sm text-slate-500 pt-4">
        <a href={Astro.self.moduleId?.replace(process.cwd(), `https://github.com/chrisdmacrae/astro-pwa/tree/${branch}/packages/demo-examples`)}>
          View on Github
        </a>
      </footer>
    </div>
  </SPA>
</Layout>
